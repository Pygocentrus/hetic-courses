<h1><%= @tag.name %></h1>

<p>
  <%= link_to 'Edit', edit_tag_path(@tag) %> |
  <%= link_to 'Back', tags_path %>
</p>

<% unless @courses.empty? %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Auteur</th>
      <th>Difficulté</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.date.strftime("%d/%m/%Y, %H:%M") %></td>
      <td><%= "#{course.users[0].first_name} #{course.users[0].last_name}" %></td>
      <td><%= course.level %></td>
      <td><%= link_to 'Voir', course, :class => "btn btn-primary" %></td>
      <td><%= link_to 'Modifier', edit_course_path(course), :class => "btn btn-warning" %></td>
      <td><%= link_to 'Supprimer', course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>
    Pas de cours associés au tag <%= @tag.name %>
  </p>
<% end %>
