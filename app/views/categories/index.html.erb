<h1>Liste des catégories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td>
        <%= category.name %>&nbsp;
        <% if @categories_count[category.id].present? %>
          <span class="badge"><%= @categories_count[category.id] %> cours</span>
        <% end %>
      </td>
      <td><%= link_to 'Voir', category, :class => "btn btn-primary" %></td>
      <td><%= link_to 'Modifier', edit_category_path(category), :class => "btn btn-warning" %></td>
      <td><%= link_to 'Supprimer', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter une nouvelle catégorie', new_category_path, :class => "btn btn-primary" %>
