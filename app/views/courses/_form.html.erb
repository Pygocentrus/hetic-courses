  <div class="input-group" style="width:40%; margin:20px;">
    <span class="input-group-addon" style="width:20%; background-color:#F00!important;color:#FFF!important;">Description</span>
    <!-- <input type="text" class="form-control" placeholder="Username"> -->
    <%= f.text_area :description, placeholder: 'ex: Lorem Elsass ipsum Strasbourg jetz gehts los gal ftomi! leverwurscht Pellentesque Coopé de Truchtersheim chambon nüdle risus, Christkindelsmärik tellus barapli', class: "form-control" %>
  </div>
  <!-- <div class="field form-group">
    <%= f.text_area :description, placeholder: 'Description' %>
  </div> -->

  <div class="field form-group">
    <%= f.label :date %><br>
    <%= f.datetime_select :date, :ampm => false, :minute_step => 15 %>
  </div>

  <div class="actions">
    <%= submit_tag "Valider", class: "btn btn-primary" %>
  </div>

