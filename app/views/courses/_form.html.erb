<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>


      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group" style="width:40%; margin:20px;">
    <span class="input-group-addon" style="width:20%; background-color:#F00!important;color:#FFF!important;">Titre</span>
    <!-- <input type="text" class="form-control" placeholder="Username"> -->
    <%= f.text_field :title, placeholder: 'ex: Mon super cours', class: "form-control" %>
  </div>
  <div class="input-group" style="width:40%; margin:20px;">
    <span class="input-group-addon" style="width:20%;">Niveau</span>
    <!-- <input type="text" class="form-control" placeholder="Username"> -->
    <%= f.text_field :level, placeholder: 'ex: Newbie', class: "form-control" %>
  </div>
  <div class="input-group" style="width:40%; margin:20px;">
    <span class="input-group-addon" style="width:20%;">Lieu</span>
    <!-- <input type="text" class="form-control" placeholder="Username"> -->
    <%= f.text_field :location, placeholder: 'ex: NYC', class: "form-control" %>
  </div>
  <div class="input-group" style="width:40%; margin:20px;">
    <span class="input-group-addon" style="width:20%;">Vidéo</span>
    <!-- <input type="text" class="form-control" placeholder="Username"> -->
    <%= f.text_field :video_link, placeholder: 'ex: http://youtube.com', class: "form-control" %>
  </div>
  <div class="input-group" style="width:40%; margin:20px;">
    <span class="input-group-addon" style="width:20%;">Slideshare</span>
    <!-- <input type="text" class="form-control" placeholder="Username"> -->
    <%= f.text_field :slideshare_link, placeholder: 'ex: http://slideshare.com', class: "form-control" %>
  </div>
  <div class="input-group" style="width:40%; margin:20px;">
    <span class="input-group-addon" style="width:20%;">Image</span>
    <!-- <input type="text" class="form-control" placeholder="Username"> -->
    <%= f.text_field :image_link, placeholder: 'ex: http://flikr.com', class: "form-control" %>
  </div>
  <div class="input-group" style="width:40%; margin:20px;">
    <span class="input-group-addon" style="width:20%;">Durée</span>
    <!-- <input type="text" class="form-control" placeholder="Username"> -->
    <%= f.text_field :duration, placeholder: 'ex: 20', class: "form-control" %>
    <span class="input-group-addon">mn</span>
  </div>

  <!-- <div class="field form-group">
    <%= f.url_field :image_link, placeholder: 'Lien image' %>
  </div> -->

  <!-- <div class="field form-group">
    <%= f.text_field :duration, placeholder: 'Durée' %> mn
  </div> -->

  <div class="field form-group">
    <%= f.label "Catégorie" %><br>
    <%= f.select(:categorie_id, Categorie.all.order(:name).collect {|p| [ p.name, p.id ] }) %>
  </div>

  <div class="field form-group">
    <%= f.label "Tags" %><br>
    <%= f.select(:tags, Tag.all.order(:name).collect {|t| [ t.name, t.name ] }, {}, { :multiple => true, :size => 3 }) %>
  </div>





